<!DOCTYPE html>
<html>
  <head>
    <title>Medlist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div>
    <%= link_to 'Log Out', logout_path, method: :delete %>
    <%= link_to 'Add Medication', new_medication_path %> 
    <%= link_to 'All Medications', medications_path %>
    <%= link_to 'Add a Medical Condition', new_condition_path %>
    <%= link_to 'All Medical Conditions', conditions_path %>
  </div>
  <body>
    <%= yield %>
  </body>
</html>
